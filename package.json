{
  "name": "formulon",
  "version": "0.0.0-semantically-released",
  "description": "Salesforce Formula Parser",
  "main": "lib/formulon.js",
  "scripts": {
    "build": "yarn compile:parser && babel src --out-dir lib",
    "compile:parser": "pegjs -o ./lib/salesforceParser.js ./grammars/salesforceFormula.pegjs",
    "test": "yarn build && mocha --require babel-core/register --recursive",
    "semantic-release": "semantic-release pre && yarn publish && semantic-release post"
  },
  "release": {
    "verifyConditions": "condition-circle",
    "getLastRelease": "last-release-git-tag"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leifg/formulon.git"
  },
  "keywords": [
    "parser",
    "salesforce",
    "formula"
  ],
  "author": "Leif Gensert",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "last-release-git-tag": "^1.0.1",
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "chai": "^4.2.0",
    "condition-circle": "^1.2.0",
    "mocha": "^7.0.1",
    "pegjs": "^0.10.0",
    "semantic-release": "^6.3.0"
  }
}
